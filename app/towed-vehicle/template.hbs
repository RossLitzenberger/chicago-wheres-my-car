<div class="panel panel-default">
    <div class="panel-heading text-center"><h2>This vehicle was towed</h2></div>
    <div class="panel-body">
        <table class="table">
            <tbody>
                <tr>
                    <td>Service Request Number</td>
                    <td>{{model.id}}</td>
                </tr>
                <tr>
                    <td>Date Towed</td>
                    <td>{{moment-calendar model.date}}</td>
                </tr>
                <tr>
                    <td>Description</td>
                    <td>
                        {{#if model.description}}
                            {{model.description}}
                        {{else}}
                            <em>no description</em>
                        {{/if}}
                    </td>
                </tr>
                <tr>
                    <td>License Plate</td>
                    <td>
                        {{#if (lte model.licensePlate.length 2)}}
                            {{model.licensePlate}} <em>unknown</em>
                        {{else}}
                            {{model.licensePlate}}
                        {{/if}}
                    </td>
                </tr>
                <tr>
                    <td>Towing Facility's Phone</td>
                    <td>
                        <a href="tel:{{model.towFacilityPhone}}">{{model.towFacilityPhone}}</a>
                    </td>
                </tr>
                <tr>
                    <td>Towed to</td>
                    <td>{{model.towedToAddress}}</td>
                </tr>
            </tbody>
        </table>
        <div class="text-center">
            <a
                href="https://www.google.com/maps/place/{{model.towedToAddress}}"
                target="_blank"
            >
                See map
            </a>
        </div>
    </div>
</div>
